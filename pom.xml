  <parent>
    <groupId>org.clojure</groupId>
    <artifactId>clojure-pom</artifactId>
    <version>1.1.0-alpha-SNAPSHOT</version>
  </parent>
  <artifactId>incanter</artifactId>
  <groupId>${artifactId}</groupId>
  <name>${artifactId}</name>
  <version>1.0-SNAPSHOT</version>
  <build>
    <sourceDirectory>${basedir}/src</sourceDirectory>
    <outputDirectory>target/classes</outputDirectory> <!-- change for deployment war/WEB-INF/classes -->
    <resources>
      <resource>
        <directory>src</directory>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <directory>test</directory>
      </testResource>
    </testResources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>compile</id>
            <configuration>
              <tasks>
                <java fork="true"
                      classname="clojure.lang.Compile"
                      classpathref="maven.compile.classpath"
                      failonerror="true">
                  <sysproperty key="clojure.compile.path"
                               value="${project.build.outputDirectory}"/>
                  <arg value="incanter.core"/>
		  <arg value="incanter.chrono"/>
		  <arg value="incanter.classification"/>
		  <arg value="incanter.incremental-stats"/>
		  <arg value="incanter.information-theory"/>
		  <arg value="incanter.internal"/>
		  <arg value="incanter.io"/>
		  <arg value="incanter.transformations"/>
		  <arg value="incanter.probability"/>
		  <arg value="incanter.geospatial"/>
		  <arg value="incanter.stats"/>
                </java>
              </tasks>
            </configuration>
          </execution>
	  <execution>
	    <id>test</id>
            <configuration>
              <tasks>
		<java classname="clojure.main" 
		      classpathref="maven.test.classpath">
                  <arg value="-e"/>
                  <arg value="(require '(incanter [tests :as main]))
                              (main/run)"/>
                </java>
              </tasks>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

